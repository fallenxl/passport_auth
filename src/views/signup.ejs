<%- layout("layouts/main") %>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4">
      <div class="card-header">
        <h3>Signup</h3>
      </div>
      <div class="card-body">
        <form action="/users/signup" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Insert username" />
          </div>
          <div class="form-group">
            <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Insert password"
          />
          </div>
          <button class="btn btn-primary btn-block mt-4" type="submit">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>
